---
import '../styles/global.css';
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>LAYOUT DOT ASTRO!</title>
    <script>
      const growsPath = window.location.pathname.includes('grows');

      // Because each page is its own HTML file, this will be initialized in a
      // page-specific way
      window.SITEIFY_CONFIG = {
        secondaryToggle: {
          disabled: growsPath
        }
      }

    </script>
    <script
      type="module"
      crossorigin
      src="https://cdn.jsdelivr.net/gh/nirmal-mekala/siteify@cdn/siteify.js"
    >
    </script>
    <link
      rel="stylesheet"
      crossorigin
      href="https://cdn.jsdelivr.net/gh/nirmal-mekala/siteify@cdn/assets/siteify.css"
    />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Recursive:slnt,wght,CASL,CRSV,MONO@-15..0,300..1000,0..1,0..1,0..1&display=swap"
      rel="stylesheet"
    />
    <style>
      body.hidden {
        visibility: hidden;
      }
    </style>
  </head>
  <body>
    <div id="page">
      <main>
        <slot />
      </main>
    </div>
  </body>
</html>

